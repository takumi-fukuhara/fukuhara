using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace jannkenn
{
    public class Class1
    {
        public int i;
        public int win =0;        //勝利回数
        public string kekka;      //乱数の割り当て
        public string name;       //プレイヤーの名前
        public int hantei =0;     //あいこでじゃんけんを繰り返す判定
        public char zokkou = 'y'; //ゲームを続行するかどうか
        public int kaisuu = 0;    //遊んだゲーム数
        public int lose;          //負けた回数

        public int Win()
        {
            return win += 1;
        }   //勝った回数を記録するための関数
    }
}






