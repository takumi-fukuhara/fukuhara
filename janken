using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace jannkenn
{
    public class Class1
    {
        public int i;
        public int win =0;        //勝利回数
        public string kekka;      //乱数の割り当て
        public string name;       //プレイヤーの名前
        public int hantei =0;     //あいこでじゃんけんを繰り返す判定
        public char zokkou = 'y'; //ゲームを続行するかどうか
        public int kaisuu = 0;    //遊んだゲーム数
        public int lose;          //負けた回数

        public int Win()
        {
            return win += 1;
        }   //勝った回数を記録するための関数
    }
}






using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace jannkenn
{
    class Program
    {
        static void Main(string[] args)
        {
            Class1 class1 = new Class1();
            Console.WriteLine("じゃんけんをしましょう!");
            Console.Write("あなたのお名前は?　=>");
            class1.name = Console.ReadLine();
            //名前の入力


            while (class1.zokkou == 'y')
            {

                Console.WriteLine(class1.name + "さん、勝負です！");
                class1.kaisuu++; //戦績を出すための施行した回数

                while (class1.hantei == 0)
                {
                    Console.Write("0から2の数字を入力して下さい \t 0:グー　1:チョキ　2:パー   =>");
                    class1.i = int.Parse(Console.ReadLine());
                    //入力した手を保持する
                    if(class1.i > 2)
                    {
                        Console.WriteLine("ちゃんと選んでね(-_-)zzz");
                        break;
                    }



                    Random rand = new Random((int)DateTime.Now.Ticks);
                    int result = rand.Next(0, 3);
                    // 乱数を取得

                    class1.kekka = null;
                    if (result == 0)
                    {
                        class1.kekka = "グー";
                    }
                    if (result == 1)
                    {
                        class1.kekka = "チョキ";
                    }
                    if (result == 2)
                    {
                        class1.kekka = "パー";
                    }
                    //乱数の結果を日本語で格納


                    if (result == class1.i)
                    {
                        Console.WriteLine("私は" + class1.kekka + "です。あいこです！");
                        continue;
                    }

                    else if ((result == 0 && class1.i == 1) || (result == 1 && class1.i == 2) || (result == 2 && class1.i == 0))
                    {
                        Console.WriteLine(" Ψ(^Δ ^)Ψ <私は" + class1.kekka + "です。あなたの負けです!");
                        class1.hantei = 1;
                        break;
                    }

                    else
                    {
                        Console.WriteLine("私は" + class1.kekka + "です。あなたの勝ちです！");
                        class1.hantei = 1;

                        class1.win = class1.Win();
                    }
                    //じゃんけんの勝ち負け判定
                }
                class1.hantei = 0;


                Console.Write("まだ勝負しますか？  y:yes n:no  =>");
                class1.zokkou = Console.ReadLine()[0];
                //ReadLineから一文字を読み込む
                //ReadLineはstring型であるため、そのままだとchar型に型変更ができない
            }

            class1.lose = class1.kaisuu - class1.win;
            Console.WriteLine("あなたの成績は" + class1.win + "勝" +(class1.lose)+"敗です");

            if(class1.kaisuu > 3)
            {
                if(class1.win > class1.lose)
                {
                    Console.WriteLine("なかなかやりますねぇ( ﾟДﾟ)");
                }
                else if(class1.win > 3* class1.lose)
                {
                    Console.WriteLine("恐れ入りました(+o+)");
                }
                else
                {
                    Console.WriteLine("草草草草草草草草草草");
                }
            }   //computerからの評価
            Console.ReadLine();
        }
    }
}
